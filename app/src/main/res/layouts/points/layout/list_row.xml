<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/appbar_padding_top">

    <ImageView
        android:id="@+id/imageViewPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medal_green" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewPoints"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/listItemPoints1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listItemPoints2"
            android:singleLine="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/listItemPointsMoney"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/coin_very_small"
            android:textSize="12sp" />

        <Button
            android:layout_marginTop="8dp"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textColor="#0ff"
            android:textStyle="normal"
            android:background="@drawable/points_redeem_buttondrawable"
            android:text="Redeem"
            android:textAllCaps="false"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>