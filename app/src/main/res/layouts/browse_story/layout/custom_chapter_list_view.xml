<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/double_activity_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:layout_gravity="center"
        android:background="@drawable/circle_blue"
        android:gravity="center"
        android:id="@+id/ChapNoCircle"
        android:shadowColor="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        app:layout_constraintLeft_toRightOf="@id/ChapNoCircle"
        android:layout_width="wrap_content"
        android:id="@+id/ChapTitleBrowseStoryList"
        android:layout_height="wrap_content" />

    <ImageView
        app:layout_constraintRight_toLeftOf="@id/ChapProgressRatio"
        android:layout_width="wrap_content"
        android:id="@+id/ChapProgressImage"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:textSize="24sp"

        android:id="@+id/ChapProgressRatio"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>