<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/trophy" />

    <TextView
        android:id="@+id/rewardsDialogName"
        android:layout_width="match_parent"
        android:textColor="@color/orange"
        android:textSize="@dimen/double_activity_margin"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Name" />

    <TextView
        android:id="@+id/rewardsDialogDescrip"
        android:layout_width="match_parent"
        android:gravity="center"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:text="Descrip" />


    <View
        android:layout_margin="@dimen/appbar_padding_top"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_gravity="center"
        android:background="@color/l_grey"/>
    <TextView
        android:id="@+id/rewardsDailogMoney"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/coin_small"
        android:textSize="12sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyBlue"
        android:textColor="@color/white"
        android:text="PURCHASE"
        android:id="@+id/rewardsDialogButton"
        android:padding="@dimen/double_activity_margin"/>
</LinearLayout>